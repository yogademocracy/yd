<div class="summary-details billing-address-summary">
    <div class="summary-section-label billing-address-info-label">
        ${Resource.msg('label.order.details.billing.address', 'orderDetails', null)}
    </div>
    <div class="billing-address-details">
        <div>
            <span class="firstName">${billing.address.firstName}</span>
            <span class="lastName">${billing.address.lastName}</span>
        </div>
        <div class="address1">${billing.address.street}</div>
        <div class="address2"></div>
        <span class="postalCode">${billing.address.postalCode} ${billing.address.city}, ${billing.address.state}</span>
        <div class="phone">${billing.address.phone}</div>
    </div>
</div>
